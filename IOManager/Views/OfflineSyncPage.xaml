<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IOManager.Views.OfflineSyncPage"
			 xmlns:viewModel="clr-namespace:IOManager.ViewModels"
			 x:DataType="viewModel:OfflineSyncViewModel"
             Title="OfflineSyncPage">
	<Grid
		Padding="5"
		RowSpacing="5"
		ColumnSpacing="5"
		RowDefinitions="Auto,*,*"
		ColumnDefinitions="*,*">
		
		<Button
			Text="Send"
			Command="{Binding SendCommand}"/>
		<Button
			Grid.Column="1"
			Text="Receive"
			Command="{Binding ReceiveCommand}"/>
		<Label
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Text="{Binding Status}"/>

		<VerticalStackLayout
			Grid.Row="2"
			Grid.ColumnSpan="2">
			<CarouselView 
				IndicatorView="indicator"
			ItemsSource="{Binding QrCodeStrigs}">
				<CarouselView.ItemTemplate>
					<DataTemplate>
						<VerticalStackLayout>
							<Label Text="{Binding .}"/>
						</VerticalStackLayout>
					</DataTemplate>
				</CarouselView.ItemTemplate>
			</CarouselView>
			<IndicatorView 
				x:Name="indicator"
				HorizontalOptions="Center"/>
		</VerticalStackLayout>
		

	</Grid>
</ContentPage>