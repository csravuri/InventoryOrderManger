<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IOManager.Views.OfflineSyncPage"
			 xmlns:viewModel="clr-namespace:IOManager.ViewModels"
			 xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
			 x:DataType="viewModel:OfflineSyncViewModel"
             Title="OfflineSyncPage">
	<Grid
		Padding="5"
		RowSpacing="5"
		ColumnSpacing="5"
		RowDefinitions="Auto,50,Auto,50"
		ColumnDefinitions="*,*">
		
		<Button
			Text="Send"
			Command="{Binding SendCommand}"/>
		<Button
			Grid.Column="1"
			Text="Receive"
			Command="{Binding ReceiveCommand}"/>
		<Label
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Text="{Binding Status}"/>

		<VerticalStackLayout
			Grid.Row="2"
			Grid.ColumnSpan="2">
			<CarouselView 
				Loop="False"
				IndicatorView="indicator"
				ItemsSource="{Binding QrCodeStrigs}">
				<CarouselView.ItemTemplate>
					<DataTemplate>
						<zxing:BarcodeGeneratorView
							HeightRequest="300"
							WidthRequest="300"
							Value="{Binding .}"
							Format="QrCode"
							Margin="13" />
					</DataTemplate>
				</CarouselView.ItemTemplate>
			</CarouselView>
			
		</VerticalStackLayout>

		<IndicatorView
			Grid.Row="3"
			Grid.ColumnSpan="2"
			x:Name="indicator"
			HorizontalOptions="Center"/>


	</Grid>
</ContentPage>