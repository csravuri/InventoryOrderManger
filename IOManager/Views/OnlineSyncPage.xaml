<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IOManager.Views.OnlineSyncPage"
			 xmlns:viewModel="clr-namespace:IOManager.ViewModels"
			 x:DataType="viewModel:OnlineSyncViewModel"
             Title="OnlineSyncPage">
	<Grid		
		Padding="5"
		RowSpacing="5"
		ColumnSpacing="5"
		RowDefinitions="Auto,Auto,Auto"
		ColumnDefinitions="*,*">

		<Button
			Text="Send"
			Command="{Binding SendCommand}"/>
		<Button
			Grid.Column="1"
			Text="Receive"
			Command="{Binding ReceiveCommand}"/>
		<Label 
			Grid.Row="1"
			Grid.ColumnSpan="2"
			FontSize="18"
			LineBreakMode="WordWrap"
			Text="{Binding OnlineSyncInfo}"/>

	</Grid>
</ContentPage>